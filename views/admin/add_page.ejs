 <%- include ('../_layouts/adminheader') -%>
 <h2 class="">Add a page</h2>
 <a href="/admin" class="btn btn-danger">Back to All Pages</a>

 <form method="POST" action="/admin/add-page>
    <div class="form-group">
            <label for=""> Title </label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
        </div>
        <div class="form-group">
            <label for=""> Plug </label>
            <input type="text" class="form-control" name="Plug" value="<%= plug %>" placeholder="plug">
        </div>
        <div class="form-group">
            <label for=""> Content </label>
            <textarea name="content" class="form-control" cols="30" rows="10" value="<%= content %>" placeholder="Contents"></textarea>
    </div>

    <button class="btn btn-success">Submit</button>
</form>  
 <%- include ('../_layouts/adminfooter') -%>