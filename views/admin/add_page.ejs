
<%- include('../_layouts/adminheader') -%>

<h2 class="page-title">Add a page</h2>
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
<br><br>

<form method="post" action="/admin/pages/add-page">
    
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
    </div>
    
    <div class="form-group">
        <label for="">plug</label>
        <input type="text" class="form-control" name="plug" value="<%= plug %>" placeholder="plug">
    </div>
    
    <div class="form-group">
        <label for="">Content</label>
        <textarea name="content" class="form-control" id="ta" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
    </div>
    
    <button class="btn btn-success">Submit</button>
</form>

<%- include('../_layouts/adminfooter') -%>